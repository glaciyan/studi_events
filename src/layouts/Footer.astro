---
import FooterSection from "~/components/FooterSection.astro";
import PageContainer from "./PageContainer.astro";
import LogoWithText from "~/components/LogoWithText.astro";
import NeutralLink from "~/components/NeutralLink.astro";

interface Props {
  version: string;
}

const { version } = Astro.props;
---

<footer class="mt-8 dark:bg-stone-800 bg-stone-100">
  <PageContainer class="py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-12">
      <FooterSection title="Links">
        <NeutralLink href="https://chat.whatsapp.com/DzliJ4YpifB8FUaiKDDHl8"
          >Whatsapp Gruppe</NeutralLink
        >
        <NeutralLink href="https://chat.whatsapp.com/KvKQ6NYLftXIcBy73G1vok"
          >Mensabot HTWG</NeutralLink
        >
        <NeutralLink href="https://chat.whatsapp.com/KygjUCEcIflDVsGdReD05e"
          >Mensabot UNI</NeutralLink
        >
      </FooterSection>
    </div>
    <div class="flex mt-24 items-center">
      <LogoWithText />
      <p class="mx-2 my-0 dark:text-neutral-200 text-stone-800">
        <span
          >v{version} by <a class="text-blue-400" href="https://glaciyan.cc"
            >glaciyan.cc</a
          ></span
        >
      </p>
    </div>
  </PageContainer>
</footer>

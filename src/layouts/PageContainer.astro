---
interface Props {
  as: string;
  size: "xl" | "2xl" | "sm" | "full";
  class: string;
}

const { as, size, class: className } = Astro.props;
const ContainerEl = as ?? "div";
let screenSize: string;
switch (size) {
  case "2xl":
    screenSize = "max-w-screen-2xl";
    break;
  case "sm":
    screenSize = "max-w-screen-sm";
    break;
  case "full":
    screenSize = "";
    break;
  default: // xl
    screenSize = "max-w-screen-xl";
    break;
}
const screenClass = `mx-auto px-6 ${screenSize}`;
---

<ContainerEl class:list={[screenClass, className]}><slot /></ContainerEl>
